/* 导入猜你喜欢的样式 */
@import "../../template/wxss/guess_you_enjoy.wxss";
@import "../../template/wxss/module.wxss";
@import "../../template/wxss/common.wxss";

/* good/detail/index.wxss */
swiper{height: 750rpx;width: 100%}
swiper image{width: 100%;height: 100%}
.good-name{line-height: 40rpx}



/* 底部 */
.buy-wrap{position: fixed;bottom: 0;width: 100%;left: 0;}
.buy-icon{width: 330rpx;}
.buy-icon image{width: 36rpx;height: 36rpx;display: block;margin: 0 auto}
.add-goodcart{background: rgb(255,100,0);height: 106rpx;line-height: 106rpx}
.buy-renow{background: rgb(242,48,49);height: 106rpx;line-height: 106rpx;}
.coupon-list{border: 1px solid;padding: 6rpx 10rpx}
.list image{position: absolute;right: 27rpx;top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);width: 30rpx;height: 30rpx;}

.list2 image{width: 35rpx;height: 35rpx;}
.list2-img{position: absolute;right: 27rpx;top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);width: 30rpx;height: 30rpx;}

/* 优惠券列表--弹出层 */
.tan-coupon-list{border: 1rpx solid;}

.tan-coupon-left{width: 230rpx;min-width: 250rpx;padding-top: 40rpx;padding-bottom: 24rpx;}
.tan-coupon-left image{position: absolute;width: 15rpx;height: 100%;right: 0;bottom: 0;}
.coupon-type{padding:5rpx 10rpx; }
.coupon-name{line-height: 40rpx}
.coupon-btn-wrap{position: absolute;bottom: 10rpx;left: 0;width: 95%;}
.coupon-tip{width: 100%;height: 100%;}
.coupon-btn{border: 1rpx solid;padding: 8rpx 15rpx;}
.no-coupon{padding-top: 100rpx;}

/* //放心购买服务 */
.server_tip{width: 40rpx;height: 40rpx;border: 1rpx solid;line-height: 40rpx;text-align: center}

/*购买弹出层*/
.tan-buy-info{padding-left: 290rpx;line-height: 40rpx;min-height: 200rpx;}
.tan-buy-good-img{position: absolute;width: 215rpx;height: 215rpx;left: 27rpx;top: -45rpx;padding: 15rpx;border: 1rpx solid rgb(245,245,245)}
.tan-buy-good-img image{width: 100%;height: 100%;}
.close-img{position: absolute;right: 10rpx;top: 10rpx;width: 45rpx;height: 45rpx;padding: 15rpx;}
.tan-buy-wrap{height: 100%;max-height: 100%;}
.tan-buy-wrap .item{border: 1rpx solid rgb(191,191,191);padding: 15rpx 40rpx;margin-bottom: 20rpx;}
.tan-buy-wrap .item-atv{color: rgb(242,48,49);border:1rpx solid rgb(242,48,49);}
.buy-btn{position: absolute;width: 100%;bottom: 0;left: 0;line-height: 100rpx;z-index: 111}

.tan_wrap_800{height: 800rpx;}
.input-number{background: white;text-align: center;width: 80rpx;height: 55rpx;max-height: 55rpx;}
.input-btn{width: 55rpx;height: 55rpx;padding: 0;line-height: 55rpx;text-align: center;border: 1rpx solid rgb(191,191,191);border: none;background: rgb(230,230,230);}
.input-avt{color: rgb(191,191,191);background: rgb(245,245,245);}
.spec-wrap{height:500rpx;overflow:scroll}

.coupon-vip-tip{position: absolute;top: 0;left:0;color: rgb(255,200,36);background: rgb(42,43,28);padding: 8rpx 15rpx;border-top-right-radius: 20rpx;border-bottom-right-radius: 20rpx;}
.good_cart_icon{overflow: visible;}
.shopcart_num{position: absolute;top: -10rpx;right: -20rpx;width: 35rpx;max-height: 35rpx;height: 35rpx;max-width: 435rpx;line-height: 35rpx;}
