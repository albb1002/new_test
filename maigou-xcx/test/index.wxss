.city-wrap{position: fixed;width: 100%;left: 0;bottom: 0;background: white;height: 700rpx;font-size: 28rpx;transition: all 0.5s;-webkit-transition: all 0.5s;}
.city-list-wrap{padding: 0 27rpx;overflow: scroll;max-height: 70%;}

.city-wrap .list{border-bottom: 1rpx solid rgb(242,242,242);padding: 25rpx 0;color: rgb(101,101,101);position: relative}
.city-wrap .list image{width: 30rpx;height: 30rpx;position: absolute;right: 10rpx;top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);}
.city-wrap .list-active{color: rgb(242,48,49)}
