/* shopcart/index/index.wxss */
@import "../../template/wxss/common.wxss";
@import "../../template/wxss/module.wxss";
@import "../../template/wxss/guess_you_enjoy.wxss";
.index-edit{position: absolute;right: 0;top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);padding: 30rpx 27rpx;}
.title{text-indent: 60rpx;}
.check{position: absolute;left: 27rpx;top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);border: 1px solid rgb(230,230,230);width:44rpx;height: 44rpx; text-indent: 0}
.check image{width: 100%;height: 100%;}
.checked{border: 1rpx solid rgb(242,48,49);}

.good-left{width: 260rpx;min-width: 260rpx;max-width: 260rpx;padding-right: 20rpx;}
.good-left-img{width: 200rpx;height: 200rpx;margin-left: 60rpx;}
.good-left-img image{width: 100%;height: 100%;}

.good-check{left: 0;top: 100rpx;}
.good-name{line-height: 40rpx;}
.good-spec{padding: 18rpx 10rpx;border: 1px solid rgb(230,230,230);padding-right: 60rpx;}
.good-spec image{width: 44rpx;height: 44rpx;position: absolute;right: 8rpx;top: 50%;transform: translateY(-50%) rotate(90deg);-webkit-transform: translateY(-50%) rotate(90deg)}

.num-btn{width: 60rpx;height: 60rpx;line-height: 60rpx;border: 1rpx solid rgb(230,230,230)}
.num-txt{width:100rpx;border-top: 1rpx solid rgb(230,230,230);border-bottom:1rpx solid rgb(230,230,230);height: 60rpx;}
.num-txt input[type="number"]{width: 100%;height: 100%;}

.play-wrap{position: fixed;bottom: 0;left: 0;width: 100%;line-height: 100rpx;z-index: 111;}
.play-line100{line-height: 100rpx;}
.go-play{width: 200rpx;min-width: 200rpx;max-width: 200rpx;}
.play-check{width: 200rpx;min-width: 200rpx;max-width: 200rpx;text-indent: 88rpx;}
.play-check .good-check{top: 50%;transform: translateY(-50%);-webkit-transform: translateY(-50%);left: 28rpx;}
.play-check .good-check image{display: block}

.yi-coupon{background: rgb(102,102,102);color: white;line-height: 60rpx;padding:0 20rpx;border: 1rpx solid rgb(101,101,101);}
.del-btn{color: rgb(242,48,49);border: 1rpx solid rgb(242,48,49);line-height: 60rpx;padding: 0 20rpx;}
/*购买弹出层*/
.tan-buy-info{padding-left: 290rpx;line-height: 40rpx;}
.tan-buy-good-img{position: absolute;width: 215rpx;height: 215rpx;left: 27rpx;top: -45rpx;padding: 15rpx;border: 1rpx solid rgb(245,245,245)}
.tan-buy-good-img image{width: 100%;height: 100%;}
.close-img{position: absolute;right: 10rpx;top: 10rpx;width: 45rpx;height: 45rpx;padding: 15rpx;}
.tan-buy-wrap{height: 100%;max-height: 100%;}
.tan-buy-wrap .item{border: 1rpx solid rgb(191,191,191);padding: 15rpx 40rpx;margin-bottom: 20rpx;}
.tan-buy-wrap .item-atv{color: rgb(242,48,49);border:1rpx solid rgb(242,48,49);}
.buy-btn{position: absolute;width: 100%;bottom: 0;left: 0;line-height: 100rpx;z-index: 11}

.tan_wrap_800{height: 800rpx;}
.input-number{background: white;text-align: center;width: 80rpx;height: 55rpx;max-height: 55rpx;}
.input-btn{width: 55rpx;height: 55rpx;padding: 0;line-height: 55rpx;text-align: center;border: 1rpx solid rgb(191,191,191);border: none;background: rgb(230,230,230);}
.input-avt{color: rgb(191,191,191);background: rgb(245,245,245);}
.spec-wrap{height:500rpx;overflow:scroll}

.good-null-wrap{padding: 75rpx 0 30rpx 0;}
.good-null-img{width: 170rpx;height: 140rpx;}

